<Window x:Class="MGCleaning.Desktop.Views.AccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:MGCleaning.Desktop.Controls"
        Title="Account Beheer" Height="750" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <controls:HeaderControl Grid.Row="0" Margin="10"/>

        <!-- Content -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- Mijn Account Tab -->
            <TabItem Header="Mijn Account">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Mijn Gegevens" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                        <StackPanel Grid.Row="1" Margin="0,5">
                            <Label Content="Gebruikersnaam:" FontSize="14"/>
                            <TextBox x:Name="MyUsernameTextBox" Height="30" IsReadOnly="True" Background="#F0F0F0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Margin="0,5">
                            <Label Content="Email:" FontSize="14"/>
                            <TextBox x:Name="MyEmailTextBox" Height="30"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Margin="0,5">
                            <Label Content="Telefoonnummer:" FontSize="14"/>
                            <TextBox x:Name="MyTelefoonnummerTextBox" Height="30"/>
                        </StackPanel>

                        <StackPanel Grid.Row="4" Margin="0,5">
                            <Label Content="Adres:" FontSize="14"/>
                            <TextBox x:Name="MyAdresTextBox" Height="30"/>
                        </StackPanel>

                        <TextBlock x:Name="MyAccountRolTextBlock" Grid.Row="5" 
                                   FontSize="14" Margin="0,10" Foreground="Gray"/>

                        <StackPanel Grid.Row="6" Margin="0,20">
                            <Button Content="Gegevens Opslaan" Height="40" Margin="0,0,0,10"
                                    Background="#0066CC" Foreground="White" Click="OpslaanGegevensButton_Click"/>
                            <Button Content="Uitloggen" Height="40" 
                                    Background="#CC0000" Foreground="White" Click="UitloggenButton_Click"/>
                            <TextBlock x:Name="MyAccountStatusTextBlock" Margin="0,10" 
                                       HorizontalAlignment="Center" Foreground="Green"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Nieuwe User Tab (alleen voor Admin en Manager) -->
            <TabItem x:Name="NieuweUserTab" Header="Nieuwe User">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="0,10">
                            <Label Content="Gebruikersnaam:" FontSize="14"/>
                            <TextBox x:Name="RegisterUsernameTextBox" Height="30"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="0,10">
                            <Label Content="Wachtwoord:" FontSize="14"/>
                            <PasswordBox x:Name="RegisterWachtwoordBox" Height="30"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Margin="0,10">
                            <Label Content="Email:" FontSize="14"/>
                            <TextBox x:Name="RegisterEmailTextBox" Height="30"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Margin="0,10">
                            <Label Content="Telefoonnummer:" FontSize="14"/>
                            <TextBox x:Name="RegisterTelefoonTextBox" Height="30"/>
                        </StackPanel>

                        <StackPanel Grid.Row="4" Margin="0,10">
                            <Label Content="Adres:" FontSize="14"/>
                            <TextBox x:Name="RegisterAdresTextBox" Height="30"/>
                        </StackPanel>

                        <StackPanel Grid.Row="5" Margin="0,10">
                            <Label Content="Rol:" FontSize="14"/>
                            <ComboBox x:Name="RegisterRolComboBox" Height="30" SelectedIndex="0">
                                <!-- Items worden dynamisch ingevuld -->
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Row="6" Margin="0,20">
                            <Button Content="Gebruiker Aanmaken" Height="40" 
                                    Background="#009900" Foreground="White" Click="RegisterenButton_Click"/>
                            <TextBlock x:Name="RegisterStatusTextBlock" Margin="0,10" 
                                       HorizontalAlignment="Center" Foreground="Red"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- All Users Tab (alleen voor Admin en Manager) -->
            <TabItem x:Name="AllUsersTab" Header="All Users">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Gebruikersbeheer" FontSize="18" FontWeight="Bold" Margin="5"/>

                    <DataGrid x:Name="UsersDataGrid" Grid.Row="1" 
                              AutoGenerateColumns="False" 
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Gebruikersnaam" Binding="{Binding UserName}" Width="150"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                            <DataGridTextColumn Header="Telefoonnummer" Binding="{Binding Telefoonnummer}" Width="150"/>
                            <DataGridTextColumn Header="Adres" Binding="{Binding Adres}" Width="*"/>
                            <DataGridCheckBoxColumn Header="Geblokkeerd" Binding="{Binding LockoutEnabled}" Width="100" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5">
                        <Button x:Name="BewerkenUserButton" Content="Gebruiker Bewerken" Width="150" Height="35" 
                                Margin="5" Background="#FF9900" Foreground="White" Click="BewerkenUserButton_Click"/>
                        <Button x:Name="BlokkerenUserButton" Content="Blokkeren/Activeren" Width="150" Height="35" 
                                Margin="5" Background="#FF6600" Foreground="White" Click="BlokkerenUserButton_Click"/>
                        <Button x:Name="VerwijderenUserButton" Content="Gebruiker Verwijderen" Width="150" Height="35" 
                                Margin="5" Background="#CC0000" Foreground="White" Click="VerwijderenUserButton_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Sluiten" Width="150" Height="35" 
                    Background="#666666" Foreground="White" Click="SluitenButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
