<Window x:Class="MGCleaning.Desktop.Views.KoppelGebouwDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Koppel aan Gebouw" Height="400" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock x:Name="ArbeiderInfoTextBlock" FontSize="14" FontWeight="Bold"/>
        </StackPanel>

        <GroupBox Grid.Row="1" Header="Gekoppelde Gebouwen" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListBox x:Name="GebouwenListBox" Grid.Row="0" Margin="5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <Run Text="{Binding Gebouw.Naam}"/>
                                <Run Text=" - "/>
                                <Run Text="{Binding Gebouw.Adres}"/>
                            </TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                    <Button Content="Koppel Nieuw Gebouw" Width="150" Height="30" 
                            Margin="5" Background="#0066CC" Foreground="White" Click="KoppelButton_Click"/>
                    <Button Content="Ontkoppel" Width="120" Height="30" 
                            Margin="5" Background="#CC0000" Foreground="White" Click="OntkoppelButton_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Sluiten" Width="100" Height="35" 
                    Background="#666666" Foreground="White" Click="SluitenButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
