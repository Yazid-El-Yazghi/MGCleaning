<Window x:Class="MGCleaning.Desktop.Views.UserEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gebruiker Bewerken" Height="550" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,5">
            <Label Content="Gebruikersnaam:" FontSize="14"/>
            <TextBox x:Name="UsernameTextBox" Height="30" IsReadOnly="True" Background="#F0F0F0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,5">
            <Label Content="Email:" FontSize="14"/>
            <TextBox x:Name="EmailTextBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,5">
            <Label Content="Telefoonnummer:" FontSize="14"/>
            <TextBox x:Name="TelefoonnummerTextBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,5">
            <Label Content="Adres:" FontSize="14"/>
            <TextBox x:Name="AdresTextBox" Height="30"/>
        </StackPanel>

        <StackPanel x:Name="RolPanel" Grid.Row="4" Margin="0,5">
            <Label Content="Rol wijzigen (alleen voor Admin):" FontSize="14"/>
            <ComboBox x:Name="RolComboBox" Height="30">
                <ComboBoxItem Content="Admin"/>
                <ComboBoxItem Content="Manager"/>
                <ComboBoxItem Content="Schoonmaker"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="5" Margin="0,5">
            <Label Content="Nieuw wachtwoord (optioneel):" FontSize="14"/>
            <PasswordBox x:Name="NieuwWachtwoordBox" Height="30"/>
            <TextBlock Text="Laat leeg om wachtwoord niet te wijzigen" 
                       FontSize="11" Foreground="Gray" Margin="0,2,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Opslaan" Width="100" Height="35" Margin="5" 
                    Background="#0066CC" Foreground="White" Click="OpslaanButton_Click"/>
            <Button Content="Annuleren" Width="100" Height="35" Margin="5" 
                    Background="#666666" Foreground="White" Click="AnnulerenButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
