<Window x:Class="MGCleaning.Desktop.Views.ProductEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Bewerken" Height="450" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,5">
            <Label Content="Naam:"/>
            <TextBox x:Name="NaamTextBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,5">
            <Label Content="Type:"/>
            <ComboBox x:Name="TypeComboBox" Height="30">
                <ComboBoxItem Content="Vloerreiniger"/>
                <ComboBoxItem Content="Toiletproduct"/>
                <ComboBoxItem Content="Glasreiniger"/>
                <ComboBoxItem Content="Allesreiniger"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,5">
            <Label Content="Voorraad:"/>
            <TextBox x:Name="VoorraadTextBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,5">
            <Label Content="Hoeveelheid per 100m2:"/>
            <TextBox x:Name="HoeveelheidPer100M2TextBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Opslaan" Width="100" Height="35" Margin="5" 
                    Background="#0066CC" Foreground="White" Click="OpslaanButton_Click"/>
            <Button Content="Annuleren" Width="100" Height="35" Margin="5" 
                    Background="#666666" Foreground="White" Click="AnnulerenButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
