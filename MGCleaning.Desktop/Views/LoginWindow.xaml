<Window x:Class="MGCleaning.Desktop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:MGCleaning.Desktop.Controls"
        Title="MG Cleaning - Inloggen" Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <controls:HeaderControl Grid.Row="0" Margin="10"/>

        <!-- Login Form -->
        <Border Grid.Row="1" Margin="40" Background="White" 
                BorderBrush="#0066CC" BorderThickness="2" CornerRadius="10">
            <StackPanel Margin="30" VerticalAlignment="Center">
                <TextBlock Text="Welkom bij MG Cleaning" 
                           FontSize="20" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <StackPanel Margin="0,10">
                    <Label Content="Gebruikersnaam:" FontSize="14"/>
                    <TextBox x:Name="UsernameTextBox" Height="35" FontSize="14"/>
                </StackPanel>

                <StackPanel Margin="0,10">
                    <Label Content="Wachtwoord:" FontSize="14"/>
                    <PasswordBox x:Name="PasswordBox" Height="35" FontSize="14"/>
                </StackPanel>

                <TextBlock x:Name="ErrorMessageTextBlock" 
                           Foreground="Red" 
                           HorizontalAlignment="Center" 
                           Margin="0,10" 
                           TextWrapping="Wrap"/>

                <Button Content="Inloggen" 
                        Height="45" 
                        Margin="0,20,0,0"
                        Background="#0066CC" 
                        Foreground="White" 
                        FontSize="16"
                        FontWeight="Bold"
                        Click="LoginButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
