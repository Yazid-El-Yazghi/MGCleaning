<Window x:Class="MGCleaning.Desktop.Views.SelecteerGebouwDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Selecteer Gebouw" Height="400" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Selecteer een gebouw om te koppelen:" 
                   FontSize="14" Margin="0,0,0,10"/>

        <ListBox x:Name="GebouwenListBox" Grid.Row="1" Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Naam}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Adres}" FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Koppelen" Width="100" Height="35" Margin="5" 
                    Background="#0066CC" Foreground="White" Click="KoppelenButton_Click"/>
            <Button Content="Annuleren" Width="100" Height="35" Margin="5" 
                    Background="#666666" Foreground="White" Click="AnnulerenButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
