<Window x:Class="MGCleaning.Desktop.Views.ArbeiderEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Arbeider Bewerken" Height="450" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,5">
            <Label Content="Naam:"/>
            <TextBox x:Name="NaamTextBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,5">
            <Label Content="Telefoonnummer:"/>
            <TextBox x:Name="TelefoonnummerTextBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,5">
            <Label Content="Adres:"/>
            <TextBox x:Name="AdresTextBox" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,5">
            <CheckBox x:Name="IsVerantwoordelijkeCheckBox" Content="Is Verantwoordelijke" 
                      VerticalAlignment="Center" Margin="0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Opslaan" Width="100" Height="35" Margin="5" 
                    Background="#0066CC" Foreground="White" Click="OpslaanButton_Click"/>
            <Button Content="Annuleren" Width="100" Height="35" Margin="5" 
                    Background="#666666" Foreground="White" Click="AnnulerenButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
