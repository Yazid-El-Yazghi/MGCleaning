<Window x:Class="MGCleaning.Desktop.Views.PersoneelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:MGCleaning.Desktop.Controls"
        Title="Personeel Beheer" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <controls:HeaderControl Grid.Row="0" Margin="10"/>

        <!-- Content -->
        <DockPanel Grid.Row="1" Margin="10">
            <!-- Buttons -->
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                <Button x:Name="ToevoegenButton" Content="Nieuwe Arbeider" Width="140" Height="35" 
                        Margin="5" Background="#0066CC" Foreground="White" Click="ToevoegenButton_Click"/>
                <Button x:Name="WijzigenButton" Content="Wijzigen" Width="120" Height="35" 
                        Margin="5" Background="#FF9900" Foreground="White" Click="WijzigenButton_Click"/>
                <Button x:Name="VerwijderenButton" Content="Verwijderen" Width="120" Height="35" 
                        Margin="5" Background="#CC0000" Foreground="White" Click="VerwijderenButton_Click"/>
                <Button x:Name="KoppelenButton" Content="Koppel aan Gebouw" Width="140" Height="35" 
                        Margin="5" Background="#009900" Foreground="White" Click="KoppelenButton_Click"/>
            </StackPanel>

            <!-- Data Grid -->
            <DataGrid x:Name="PersoneelDataGrid" 
                      AutoGenerateColumns="False" 
                      SelectionMode="Single"
                      CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Naam" Binding="{Binding Naam}" Width="*"/>
                    <DataGridTextColumn Header="Telefoon" Binding="{Binding Telefoonnummer}" Width="150"/>
                    <DataGridTextColumn Header="Adres" Binding="{Binding Adres}" Width="*"/>
                    <DataGridCheckBoxColumn Header="Verantwoordelijke" Binding="{Binding IsVerantwoordelijke}" Width="130"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Terug naar Start" Width="150" Height="35" 
                    Background="#666666" Foreground="White" Click="TerugButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
