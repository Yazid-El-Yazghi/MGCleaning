using System.Windows;
using MGCleaning.Desktop.Services;
using MGCleaning.Models;

namespace MGCleaning.Desktop.Views;

public partial class PersoneelWindow : Window
{
    private readonly ArbeiderService _arbeiderService;

    public PersoneelWindow(ArbeiderService arbeiderService)
    {
        InitializeComponent();
        _arbeiderService = arbeiderService;
        Loaded += PersoneelWindow_Loaded;
    }

    private async void PersoneelWindow_Loaded(object sender, RoutedEventArgs e)
    {
        await LaadPersoneelAsync();
    }

    private async Task LaadPersoneelAsync()
    {
        try
        {
            var arbeiders = await _arbeiderService.GetAlleArbeidersAsync();
            PersoneelDataGrid.ItemsSource = arbeiders;
        }
        catch (Exception ex)
        {
            MessageBox.Show($"Fout bij laden personeel: {ex.Message}", "Fout", 
                MessageBoxButton.OK, MessageBoxImage.Error);
        }
    }

    private void ToevoegenButton_Click(object sender, RoutedEventArgs e)
    {
        var dialog = new ArbeiderEditDialog(_arbeiderService);
        if (dialog.ShowDialog() == true)
        {
            _ = LaadPersoneelAsync();
        }
    }

    private void WijzigenButton_Click(object sender, RoutedEventArgs e)
    {
        if (PersoneelDataGrid.SelectedItem is Arbeider geselecteerd)
        {
            var dialog = new ArbeiderEditDialog(_arbeiderService, geselecteerd);
            if (dialog.ShowDialog() == true)
            {
                _ = LaadPersoneelAsync();
            }
        }
        else
        {
            MessageBox.Show("Selecteer eerst een arbeider.", "Waarschuwing", 
                MessageBoxButton.OK, MessageBoxImage.Warning);
        }
    }

    private async void VerwijderenButton_Click(object sender, RoutedEventArgs e)
    {
        if (PersoneelDataGrid.SelectedItem is Arbeider geselecteerd)
        {
            var result = MessageBox.Show($"Weet u zeker dat u '{geselecteerd.Naam}' wilt verwijderen?", 
                "Bevestiging", MessageBoxButton.YesNo, MessageBoxImage.Question);

            if (result == MessageBoxResult.Yes)
            {
                try
                {
                    await _arbeiderService.VerwijderenAsync(geselecteerd.Id);
                    await LaadPersoneelAsync();
                    MessageBox.Show("Arbeider succesvol verwijderd.", "Succes", 
                        MessageBoxButton.OK, MessageBoxImage.Information);
                }
                catch (Exception ex)
                {
                    MessageBox.Show($"Fout bij verwijderen: {ex.Message}", "Fout", 
                        MessageBoxButton.OK, MessageBoxImage.Error);
                }
            }
        }
        else
        {
            MessageBox.Show("Selecteer eerst een arbeider.", "Waarschuwing", 
                MessageBoxButton.OK, MessageBoxImage.Warning);
        }
    }

    private void KoppelenButton_Click(object sender, RoutedEventArgs e)
    {
        if (PersoneelDataGrid.SelectedItem is Arbeider geselecteerd)
        {
            var dialog = new KoppelGebouwDialog(_arbeiderService, geselecteerd);
            if (dialog.ShowDialog() == true)
            {
                _ = LaadPersoneelAsync();
            }
        }
        else
        {
            MessageBox.Show("Selecteer eerst een arbeider.", "Waarschuwing", 
                MessageBoxButton.OK, MessageBoxImage.Warning);
        }
    }

    private void TerugButton_Click(object sender, RoutedEventArgs e)
    {
        Close();
    }
}
